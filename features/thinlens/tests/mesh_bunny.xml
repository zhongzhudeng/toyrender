<test type="image" id="mesh_bunny">
    <integrator type="normals">
        <scene>
            <camera type="thinLens" id="camera">
                <integer name="width" value="1920"/>
                <integer name="height" value="1080"/>

                <string name="fovAxis" value="x"/>
                <float name="fov" value="40"/>
                <float name="lensRadius" value="0.7"/>
                <float name="focalDistance" value="4.6"/>

                <transform>
                    <lookat origin="0,-5,1.5" target="-0.2,0,0.8" up="0,0,-1" />
                </transform>
            </camera>

            <instance>
                <shape type="mesh" filename="../../../tests/meshes/bunny.ply"/>
            </instance>
        </scene>
        <sampler type="independent" count="256"/>
    </integrator>
</test>
