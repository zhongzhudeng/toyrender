<scene id="scene">
    <camera type="perspective" id="camera">
        <integer name="width" value="512" />
        <integer name="height" value="512" />

        <string name="fovAxis" value="x" />
        <float name="fov" value="30" />

        <transform>
            <rotate axis="1,0,0" angle="-2.5" />
            <translate z="-5" />
        </transform>
    </camera>
    <instance id="white">
        <shape type="rectangle" />
        <emission type="lambertian">
            <texture name="emission" type="constant" value="20" />
        </emission>
        <transform>
            <scale value="0.5" />
            <rotate axis="1,0,0" angle="-90" />
            <translate y="-2" />
        </transform>
    </instance>
    <light type="area">
        <ref id="white" />
    </light>
    <instance id="orange">
        <shape type="sphere" />
        <emission type="lambertian">
            <texture name="emission" type="constant" value="2,0.5,0.1" />
        </emission>
        <transform>
            <scale value="2" />
            <translate x="2.5" y="-2" z="1" />
        </transform>
    </instance>
    <light type="area">
        <ref id="orange" />
    </light>
    <instance id="blue">
        <shape type="sphere" />
        <emission type="lambertian">
            <texture name="emission" type="constant" value="3.2,11.2,48" />
        </emission>
        <transform>
            <scale value="0.5" />
            <translate x="-1" y="-0.5" z="1" />
        </transform>
    </instance>
    <light type="area">
        <ref id="blue" />
    </light>

    <instance id="bunny">
        <shape type="mesh" filename="../meshes/bunny.ply" />
        <bsdf type="diffuse">
            <texture name="albedo" type="constant" value="1" />
        </bsdf>
        <transform>
            <rotate axis="1,0,0" angle="90" />
            <translate x="0.18" y="1.03" />
        </transform>
    </instance>
    <instance id="rectangle">
        <shape type="rectangle" />
        <bsdf type="diffuse">
            <texture name="albedo" type="constant" value="1" />
        </bsdf>
        <transform>
            <rotate axis="1,0,0" angle="90" />
            <scale value="10" />
            <translate y="1" />
        </transform>
    </instance>
</scene>

<integrator type="pathtracer" depth="2">
    <image id="roughconductor_bsdf" />
    <ref id="scene" />
    <sampler type="independent" count="64" />
</integrator>

<integrator type="neepathtracer" depth="2">
    <image id="roughconductor_nee" />
    <ref id="scene" />
    <sampler type="independent" count="64" />
</integrator>

<integrator type="mispathtracer" depth="2">
    <image id="roughconductor_mis" />
    <ref id="scene" />
    <sampler type="independent" count="64" />
</integrator>