<scene id="scene">
    <camera type="perspective" id="camera">
        <integer name="width" value="512" />
        <integer name="height" value="512" />

        <string name="fovAxis" value="x" />
        <float name="fov" value="30" />

        <transform>
            <rotate axis="1,0,0" angle="-2.5" />
            <translate z="-5" />
        </transform>
    </camera>
    <instance id="orange">
        <shape type="sphere" />
        <emission type="lambertian">
            <texture name="emission" type="constant" value="2,0.5,0.1" />
        </emission>
        <transform>
            <scale value="2" />
            <translate x="2.5" y="-2" z="1" />
        </transform>
    </instance>
    <light type="area">
        <ref id="orange" />
    </light>
    <instance id="blue">
        <shape type="sphere" />
        <emission type="lambertian">
            <texture name="emission" type="constant" value="3.2,11.2,48" />
        </emission>
        <transform>
            <scale value="0.5" />
            <translate x="-1" y="-0.5" z="1" />
        </transform>
    </instance>
    <light type="area">
        <ref id="blue" />
    </light>

    <instance id="bunny">
        <shape type="mesh" filename="../meshes/bunny.ply" />
        <bsdf type="diffuse">
            <texture name="albedo" type="constant" value="1" />
        </bsdf>
        <transform>
            <rotate axis="1,0,0" angle="90" />
            <translate x="0.18" y="1.03" />
        </transform>
    </instance>
    <instance id="rectangle">
        <shape type="rectangle" />
        <bsdf type="diffuse">
            <texture name="albedo" type="constant" value="1" />
        </bsdf>
        <transform>
            <rotate axis="1,0,0" angle="90" />
            <scale value="10" />
            <translate y="1" />
        </transform>
    </instance>
</scene>

<integrator type="bsdfpathtracer">
    <image id="area_light_bsdf" />
    <ref id="scene" />
    <sampler type="independent" count="64" />
</integrator>

<integrator type="pathtracer">
    <image id="area_light_combined" />
    <scene>
        <ref id="camera" />
        <instance>
            <shape type="sphere" />
            <emission type="lambertian">
                <texture name="emission" type="constant" value="2,0.5,0.1" />
            </emission>
            <transform>
                <scale value="2" />
                <translate x="2.5" y="-2" z="1" />
            </transform>
        </instance>
        <instance id="blue_combined">
            <shape type="sphere" />
            <emission type="lambertian">
                <texture name="emission" type="constant" value="3.2,11.2,48" />
            </emission>
            <transform>
                <scale value="0.5" />
                <translate x="-1" y="-0.5" z="1" />
            </transform>
        </instance>
        <light type="area" intersectable="false">
            <ref id="blue_combined" />
        </light>

        <ref id="bunny" />
        <ref id="rectangle" />
    </scene>
    <sampler type="independent" count="64" />
</integrator> 

<integrator type="mispathtracer">
    <image id="area_light_mis" />
    <ref id="scene" />
    <sampler type="independent" count="64" />
</integrator> 

<integrator type="neepathtracer">
    <image id="area_light_improved_area_sample" />
    <scene>
        <ref id="camera" />
        <instance id="orange_improved_sample">
            <shape type="sphere" />
            <emission type="lambertian">
                <texture name="emission" type="constant" value="2,0.5,0.1" />
            </emission>
            <transform>
                <scale value="2" />
                <translate x="2.5" y="-2" z="1" />
            </transform>
        </instance>
        <light type="area" intersectable="false">
            <ref id="orange_improved_sample" />
        </light>
        <instance id="blue_improved_sample">
            <shape type="sphere"/>
            <emission type="lambertian">
                <texture name="emission" type="constant" value="3.2,11.2,48" />
            </emission>
            <transform>
                <scale value="0.5" />
                <translate x="-1" y="-0.5" z="1" />
            </transform>
        </instance>
        <light type="area" intersectable="false">
            <ref id="blue_improved_sample" />
        </light>

        <ref id="bunny" />
        <ref id="rectangle" />
    </scene>
    <sampler type="independent" count="64" />
</integrator>