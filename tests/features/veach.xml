				<shape type="sphere" />
				<emission type="lambertian">
					<texture name="emission" type="constant" value="2.5,7.5,12.5" />
				</emission>
				<transform>
					<scale value="0.5" />
					<translate x="-0.15" y="6.5" z="0.8" />
				</transform>
			</instance>
			<light type="area" intersectable="false">
				<ref id="light_medium_nee" />
			</light>
			<instance id="light_big_nee">
				<shape type="sphere" />
				<emission type="lambertian">
					<texture name="emission" type="constant" value="6,1,4" />
				</emission>
				<transform>
					<scale value="1" />
					<translate x="-0.15" y="6.5" z="-2" />
				</transform>
			</instance>
			<light type="area" intersectable="false">
				<ref id="light_big_nee" />
			</light>
			<ref id="rectangle1" />
			<ref id="rectangle2" />
			<ref id="rectangle3" />
			<ref id="rectangle4" />
			<ref id="rectangle5" />
			<ref id="rectangle6" />
		</scene>
		<sampler type="independent" count="64" />
	</integrator>
</test>

<test type="image" id="veach-mis">
	<integrator type="mispathtracer" depth="5">
		<ref id="scene" />
		<sampler type="independent" count="64" />
	</integrator>
</test>