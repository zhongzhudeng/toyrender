<scene id="scene">
    <camera type="perspective" id="camera">
        <integer name="width" value="512" />
        <integer name="height" value="512" />
        <string name="fovAxis" value="x" />
        <float name="fov" value="40" />
        <transform>
            <rotate axis="1,0,0" angle="0" />
            <translate z="-4" />
            <rotate axis="0,1,0" angle="90" />
        </transform>
    </camera>

    <light type="envmap">
        <texture type="image" filename="../textures/autumn_field_1k.exr" exposure="0.5" />
    </light>

    <bsdf type="roughconductor" id="Glossy">
        <texture type="constant" name="roughness" value="0.05" />
        <texture name="reflectance" type="constant" value="0.2" />
    </bsdf>

    <bsdf type="roughconductor" id="SuperRough">
        <texture type="constant" name="roughness" value="0.25" />
        <texture name="reflectance" type="constant" value="0.4" />
    </bsdf>

    <instance id="floor">
        <shape type="rectangle" />
        <ref id="Glossy" />
        <transform>
            <rotate axis="1,0,0" angle="90" />
            <translate y="1" />
        </transform>
    </instance>

    <instance>
        <shape type="sphere" />
        <ref id="SuperRough" />
        <transform>
            <scale value="0.5" />
            <translate x="0.0" y="0.5" />
        </transform>
    </instance>
</scene>

<integrator type="pathtracer" depth="5">
    <image id="envmap_sun_bsdf" />
    <ref id="scene" />
    <sampler type="independent" count="128" />
</integrator>

<integrator type="neepathtracer" depth="5">
    <image id="envmap_sun_nee" />
    <ref id="scene" />
    <sampler type="independent" count="128" />
</integrator>

<integrator type="mispathtracer" depth="5">
    <image id="envmap_sun_mis" />
    <ref id="scene" />
    <sampler type="independent" count="128" />
</integrator>